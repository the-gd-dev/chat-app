<%- include('../include/header.ejs') %>  
</head>
    <%- include('../include/navbar.ejs') %>  
    <main>
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-lg-4 bg-light mt-4">
                    <form class="p-4" action="/login" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" name="email" class="form-control <% if(errors && errors['email']){ %> is-invalid <% } %>" id="email" placeholder="email@example.com">
                            <% if(errors && errors['email']){ %> 
                                <div class="is-invalid"><%= errors['email'].message %></div>
                            <% } %> 
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password"  class="form-control <% if(errors && errors['password']){ %> is-invalid <% } %>" id="password" placeholder="Password">
                            <% if(errors && errors['password']){ %> 
                                <div class="is-invalid"><%= errors['password'].message %></div>
                            <% } %> 
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <input type="checkbox" name="remember_me" class="form-check-input" id="remember">
                                <label class="form-check-label" for="remember">
                                    Remember me
                                </label>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary px-xl-5">Sign in</button>
                            </div>
                        </div>
                        
                    </form>
                    <hr />
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <a class="d-block mb-2" href="/reset">Forgot password?</a>
                        <a class="d-block mb-4" href="/register">New around here? Sign up</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
<%- include('../include/footer.ejs') %>  